	IF ( (<CanSeeLOS>) && (<DISTANCE> > 5) )
		IF <DISTANCE> < 7
			IF <SRC.FINDID.i_arrow>
				IF <SRC.DIR>==6
					IF <SRC.FINDID.m_score_anim_fleches>
						SRC.SYSMESSAGEUA 0481 1 1 0 Attendez avant de tirer de nouveau
					ELSE
						SRC.LANCER_FLECHE_ANIM
					ENDIF
